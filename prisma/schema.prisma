generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user_info {
  USER_ID   String @id @db.VarChar(255)
  USER_NAME String @db.VarChar(255)
  CHAT_MODE String @default("CHAT") @db.VarChar(16)
}

model user_privilege {
  USER_ID                 String   @id @db.VarChar(255)
  TRIAL                   String   @default("N") @db.VarChar(16)
  TRIAL_PROMPT_NUM        Int      @default(0)
  PROMPT_GRANT_PER_DAY    Int
  TRIAL_PROMPT_LAST_RENEW DateTime @default(now()) @db.Timestamp(0)
}

model user_issue_report {
  ID          Int      @id @default(autoincrement()) @db.UnsignedInt
  USER_ID     String   @db.VarChar(255)
  CONTENT     String   @db.Text
  UPDATE_TIME DateTime @default(now()) @db.Timestamp(0)
}
